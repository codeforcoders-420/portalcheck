<span id="prCnt-overlap">${overlapCount}</span>
<span id="prCnt-allowedPct">${allowedPctCount}</span>
<span id="prCnt-brIncorrect">${brIncorrectCount}</span>
<span id="prCnt-negativeAllowed">${negativeAllowedCount}</span>
<span id="prCnt-lengthProcMod">${lengthProcModCount}</span>
<span id="prCnt-total">${totalCount}</span>

****************************************************************
document.getElementById('prResults').hidden = false;
document.getElementById('prCnt-overlap').textContent        = overlapCount;
document.getElementById('prCnt-allowedPct').textContent     = allowedPctCount;
document.getElementById('prCnt-brIncorrect').textContent    = brIncorrectCount;
document.getElementById('prCnt-negativeAllowed').textContent= negativeAllowedCount;
document.getElementById('prCnt-lengthProcMod').textContent  = lengthProcModCount;
document.getElementById('prCnt-total').textContent =
  overlapCount + allowedPctCount + brIncorrectCount + negativeAllowedCount + lengthProcModCount;


