/* Container */
.pr-results {
  margin-top: 16px;
  padding: 12px 14px;
  background: #fff;
  border: 1px solid rgba(2,6,23,.08);
  border-radius: 12px;
  box-shadow: 0 6px 18px rgba(2,6,23,.06);
}

.pr-results__tablewrap { overflow: auto; }

/* Table look */
.pr-matrix {
  width: 100%;
  border-collapse: collapse;
  table-layout: fixed;
  font-size: 14px;
  color: #0b1220;
}

.pr-matrix th,
.pr-matrix td {
  border: 1px solid rgba(2,6,23,.12);
  padding: 10px 12px;
  background: #fff;
}

/* Validation name cells */
.pr-matrix .label {
  text-align: left;
  font-weight: 600;
  background: #f7f8fa;
}

/* Number cells */
.pr-matrix .num {
  text-align: right;
  font-variant-numeric: tabular-nums;
}

/* Vertical headers (left/right black bars like Excel) */
.pr-matrix .vhead {
  width: 40px;                 /* narrow strip */
  background: #2c2f36;         /* dark bar */
  color: #fff;
  text-align: center;
  writing-mode: vertical-rl;   /* vertical text */
  transform: rotate(180deg);   /* make it read top-to-bottom */
  letter-spacing: .5px;
  font-weight: 700;
  border-color: #2c2f36;
}

.vhead--left  { border-top-left-radius: 8px;  border-bottom-left-radius: 8px; }
.vhead--right { border-top-right-radius: 8px; border-bottom-right-radius: 8px; }

/* Total row */
.pr-matrix .total .label {
  background: #eef2f7;
  font-weight: 700;
}
.pr-matrix .total .num {
  background: #eef2f7;
  font-weight: 700;
}

.pr-results__hint {
  margin: 8px 2px 0;
  font-size: 12px;
  color: #67707c;
}


