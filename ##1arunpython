<script>
document.addEventListener('DOMContentLoaded', function () {
    const form          = document.getElementById('standardQueriesForm');
    const targetChecks  = document.querySelectorAll('.target-env-checkbox');
    const executeBtn    = document.getElementById('standardQueriesExecuteBtn');
    const spinnerBlock  = document.getElementById('standardQueriesSpinner');

    function updateExecuteButtonState() {
        // Enable button only if at least one target env is selected
        const anyChecked = Array.from(targetChecks).some(cb => cb.checked);
        executeBtn.disabled = !anyChecked;
    }

    // Listen for changes on target checkboxes
    targetChecks.forEach(cb => {
        cb.addEventListener('change', updateExecuteButtonState);
    });

    // On form submit: show spinner + lock button
    if (form) {
        form.addEventListener('submit', function () {
            // show spinner
            spinnerBlock.classList.remove('d-none');

            // disable button & change text to avoid double-submit
            executeBtn.disabled = true;
            executeBtn.textContent = 'Running...';

            // Optionally also disable all inputs while submitting
            Array.from(form.elements).forEach(el => el.disabled = true);

            // DO NOT call event.preventDefault() – we want normal POST to backend
        });
    }
});
</script>


