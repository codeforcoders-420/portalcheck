package com.yourcompany.yourapp.controller;

import com.yourcompany.yourapp.service.StandardQueryService;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.mvc.support.RedirectAttributes;

import java.util.List;

@Controller
public class StandardQueriesController {

    private final StandardQueryService standardQueryService;

    public StandardQueriesController(StandardQueryService standardQueryService) {
        this.standardQueryService = standardQueryService;
    }

    @GetMapping("/standard-queries")
    public String showStandardQueriesPage() {
        // Just return the Thymeleaf view
        return "standard-queries";
    }

    @PostMapping("/standard-queries/run")
    public String runStandardQueries(@RequestParam("sourceEnv") String sourceEnv,
                                     @RequestParam(value = "targetEnvs", required = false) List<String> targetEnvs,
                                     RedirectAttributes redirectAttributes) {

        if (targetEnvs == null || targetEnvs.isEmpty()) {
            redirectAttributes.addFlashAttribute("error", "Please select at least one target environment.");
            return "redirect:/standard-queries";
        }

        try {
            // Call your generic comparator code here
            standardQueryService.runStandardQueries(sourceEnv, targetEnvs);

            redirectAttributes.addFlashAttribute(
                    "message",
                    "Standard queries executed for source " + sourceEnv +
                    " against " + String.join(", ", targetEnvs) + ". " +
                    "Output Excel files have been generated."
            );
        } catch (Exception e) {
            e.printStackTrace();
            redirectAttributes.addFlashAttribute(
                    "error",
                    "Failed to execute standard queries: " + e.getMessage()
            );
        }

        return "redirect:/standard-queries";
    }
}

